#!/usr/bin/env ruby

require 'commander/import'
require 'terminal-table'
# require 'term/ansicolor'
require 'trash'

require 'xcode-download'

HighLine.track_eof = false # Fix for built-in Ruby

program :version, XcodeDownload::VERSION
program :description, 'A command-line interface for downloading Xcode'

program :help, 'Author', 'Ben Chatelain <benchatelain@gmail.com>'
program :help, 'Website', 'https://phatblat.com'
program :help_formatter, :compact

default_command :help

global_option '--verbose'

require 'xcode-download/apple-developer-center'
require 'xcode-download/xcode-versions'
require 'xcode-download/helpers'
require 'xcode-download/agent'
require 'xcode-download/commands'
